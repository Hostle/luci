--########################################### FIFO BUFFER QUEUE FUNCTIONS #######################################################--

function fifo(func)
  local queue = dofile(bufferFile)
  local result = func(queue)
  for k, v in ipairs(queue) do
    queue[k] = ("%q,\n"):format(v)
  end
  table.insert(queue, "}\n")
  queue[0] = "return {\n"
  queue = table.concat(queue, "", 0)
  local f = assert(io.open(bufferFile, "w"))
  f:write(queue)
  f:close()
  return result
end

function newMsg(some_data)
  fifo(
    function(queue)
      table.insert(queue, some_data)
    end
  )
end

function nextMsg()
  -- returns nil if queue is empty
  return fifo(
    function(queue)
      return table.remove(queue, 1)
    end
  )
end


--########################################### Serial Functions ##############################################--

function syncTime(SckHnd, sport)
	local stime = tostring(os.time(os.date('*t')));
	local len = stime:len();
	local err, data = cbox:readPort(sport, 3, 5000, 1)
	if( data == "RTR") then
		if(cbox:writePort(sport, stime,10) == 0) then
			local err, res = cbox:readPort(sport, len, len*1000, 1)
			if(SckHnd) then SckHnd:send(res.."\n") end;
		return;
		end;
	end;
    	if(SckHnd) then SckHnd:send("FUNCTION [ syneTime() ] FAILED. ERROR ["..err.."]\n") end;
	return;
end

function timeNow(SckHnd, sport)
local uci = uci.cursor();
local conf = "cboxStats";
local sec = "time";
local option  = "timeNow";
local err, data = cbox:readPort(sport, 3, 5000, 1);

	if( data == "RTS") then
		local err, res = cbox:readPort(sport, 5, 8000, 1);
		if(res) then
			if(res:len() == "5") then
				uci:set(conf,sec,option,tostring(res));
				uci:commit(conf);
			end
			SckHnd:send(res.."\n");
		end;
	return;
	end;
    SckHnd:send("FUNCTION [ timeNow() ] FAILED. ERROR ["..err.."]\n");
   return;
end

function userControl(SckHnd, sport, ov)
	local userCon = ov[2];
	local len = userCon:len();
	local err, data = cbox:readPort(sport, 3, 5000, 1)
	if( data == "RTR") then
		if(cbox:writePort(sport, userCon,10) == 0) then
			local err, res = cbox:readPort(sport, len, len*1000, 1)
			if(SckHnd) then SckHnd:send(res.."\n") end;
		return;
		end;
	end;
    	if(SckHnd) then SckHnd:send("FUNCTION [ userControl() ] FAILED. ERROR ["..err.."]\n") end;
	return;
end


function updateConfig(SckHnd,sport)
local uci = uci.cursor()
local config = {
	['TEMP_HIGH'] = uci:get(conf,secTmp,[[TEMP_HIGH]]);
	['TEMP_LOW']  = uci:get(conf,secTmp,[[TEMP_LOW]]);
	['HUM_HIGH']  = uci:get(conf,secTmp,[[HUM_HIGH]]);
	['HUM_LOW']   = uci:get(conf,secTmp,[[HUM_LOW]]);
	['VERBOSE']   = uci:get(conf,secLog,[[VERBOSE]]);
	['LOG_LEV']   = uci:get(conf,secLog,[[LOG_LEV]]);
	['SCK_HOST']  = "localhost";
	['SCK_PORT']  = "8383";
	['LIGHT_ON']  = uci:get(conf,secTme,[[LIGHT_ON]]);
	['LIGHT_OFF'] = uci:get(conf,secTme,[[LIGHT_OFF]]);


};

local err, data = cbox:readPort(sport, 3, 5000, 1);
	if( data == "RTR") then
		if(cbox:writePort(sport, config.TEMP_HIGH,10) == 0) then
			cbox:readPort(sport,2,4000,1)
		end
		if(cbox:writePort(sport, config.TEMP_LOW,10) == 0) then
		cbox:readPort(sport,2,4000,1);
		end;

		if(cbox:writePort(sport, config.HUM_HIGH,10) == 0) then
		cbox:readPort(sport,2,4000,1);
		end;
	
		if(cbox:writePort(sport, config.HUM_LOW,10) == 0) then
			cbox:readPort(sport,2,4000,1);
		end;

		if(cbox:writePort(sport, config.LIGHT_ON,10) == 0) then
			cbox:readPort(sport,2,4000,1);
		end;

		if(cbox:writePort(sport, config.LIGHT_OFF,10) == 0) then
			cbox:readPort(sport,2,4000,1);
		end;
	  if(SckHnd) then SckHnd:send("CONFIG UPDATED SUCCESSFULLY \n") end ;
	  return(0);
	end;
  if(SckHnd) then SckHnd:send("FUNCTION [ updateConfig() ] FAILED. ERROR ["..err.."]\n")end
  return(1);
end

function setLeds(SckHnd,sport,leds)
local err, data = cbox:readPort(sport, 3, 5000, 1);
	if( leds and data == "RTR") then
		if(cbox:writePort(sport, tonumber(leds[2]),10) == 0) then
			cbox:readPort(sport,leds[2]:len(),5000,1);
		end;
		if(cbox:writePort(sport, tonumber(leds[3]),10) == 0) then
			cbox:readPort(sport,leds[3]:len(),5000,1);
		end;
		if(cbox:writePort(sport, tonumber(leds[4]),10) == 0) then
			cbox:readPort(sport,leds[4]:len(),5000,1);
		end;
	SckHnd:send("LED COLORS UPDATED SUCCESSFULLY\n")
	return(0);
	end;
  SckHnd:send("FUNCTION [ setLeds() ] FAILED. ERROR ["..err.."]\n")
  return(1);
end

function fanMode(s)
	local switches = { "OFF", "ON", "TEST MODE", "SERVICE MODE" };

	for i,v in pairs(switches) do
		if(tonumber(s) == i-1) then
			return(v);
		end;
	end;
  return;
end

function fanStatus(SckHnd, sport, fan)
local uci = uci.cursor();
local conf = "cboxStats";
local sec = "fan";
local option  = "fan" .. fan[2];
print(option)
local err, data = cbox:readPort(sport, 3, 5000, 1);
	if fan and (data == "RTR") then
		if(cbox:writePort(sport, fan[2], 10) == 0) then
			cbox:readPort(sport, 1,3500,1)
			local err, s = cbox:readPort(sport,1,3500,1)
				if(s and type(tonumber(s)) == "number" and tostring(s):len() == 1) then
					local res = fanMode(s);
					if(res) then
						uci:set(conf,sec,option,res);
						uci:commit(conf);
						SckHnd:send(res.."\n");
					return;
					end
				SckHnd:send("FUNCTION [ fanStatus() ] FAILED. ERROR [NO RESPONSE]\n");
				return;
				end;
		SckHnd:send("FUNCTION [ fanStatus() ] FAILED. ERROR [RTR NOT RECEIVED]\n");
		return;
		end;
  	SckHnd:send("FUNCTION [ fanStatus() ] FAILED. ERROR ["..err.."]\n");
	print("ERROR [fanStatus() Failed to Fetch fanStatus :line 220]");
	return;
	end
end

function fanSwitch(SckHnd,sport, switch)
	local uci = uci.cursor();
	local conf = "cboxStats";
	local sec = "fan";
	local option  = "fan" .. switch[2];
	local err, data = cbox:readPort(sport, 3, 5000, 1);
	
	if( switch and data == "RTR") then
		if(cbox:writePort(sport, switch[2], 10) == 0) then
			cbox:readPort(sport, 1,3500,1);
		end;
		if(cbox:writePort(sport, switch[3], 10) == 0) then
			cbox:readPort(sport, 1,3500,1);
		end;

		local err, res = cbox:readPort(sport,1,3500,1);
		if(res) then
			uci:set(conf,sec,option,res);
			uci:commit(conf);
			SckHnd:send(res.."\n");
		return;
		end;
	SckHnd:send("FUNCTION [ fanSwitch() ] FAILED. ERROR [RTR NOT RECEIVED]\n");
	return;
	end;
  SckHnd:send("FUNCTION [ fanSwitch() ] FAILED. ERROR ["..err.."]\n");
  print("ERROR [fanSwitch() Failed to Fetch fanSwitch :line 250]");
  return;
end

